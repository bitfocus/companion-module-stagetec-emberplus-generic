{
	"name": "stagetec-emberplus-generic",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.json",
		"build:watch": "tsc -p tsconfig.json --watch",
		"lint:raw": "eslint --ext .ts",
		"lint": "yarn lint:raw ."
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write"
		],
		"*.{ts}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.1.1",
		"@types/node": "^18.13.0",
		"jquery": "^3.7.1",
		"node-emberplus": "^3.0.6"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.0.0",
		"@types/jquery": "^3.5.30",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"rimraf": "^4.1.2",
		"typescript": "~4.9"
	}
}
